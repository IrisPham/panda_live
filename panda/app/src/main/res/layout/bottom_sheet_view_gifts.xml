<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_gift_black">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_below="@id/rcv_gift"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imv_coin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_coin" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/rcv_gift"
            android:id="@+id/tv_coin_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imv_coin"
            android:layout_marginLeft="5dp"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    <Spinner
        android:id="@+id/sn_quantity_gift"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/tv_send_gift"
        android:layout_toLeftOf="@id/tv_send_gift"
        android:background="#FFFFFF" />

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_below="@id/rcv_gift"
        android:id="@+id/tv_send_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:background="#45c99f"
        android:text="Gửi quà"
        />

</RelativeLayout>


