<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_radius_gift_black"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imv_gift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_apple" />

        <TextView
            android:id="@+id/tv_name_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_gift"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Táo"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_gift"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_coin"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignStart="@+id/imv_gift"
                android:layout_below="@+id/tv_name_gift"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_coin" />

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="10" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imv_gift1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_peach" />

        <TextView
            android:id="@+id/tv_name_gift1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_gift1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Lê"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_gift1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_coin2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignStart="@+id/imv_gift"
                android:layout_below="@+id/tv_name_gift"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_coin" />

            <TextView
                android:id="@+id/tv_coin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="99" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imv_gift3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_pineapple" />

        <TextView
            android:id="@+id/tv_name_gift3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_gift3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Dứa"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_gift3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_coin1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignStart="@+id/imv_gift"
                android:layout_below="@+id/tv_name_gift"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_coin" />

            <TextView
                android:id="@+id/tv_coin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="20" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imv_gift4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_avocado" />

        <TextView
            android:id="@+id/tv_name_gift4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_gift4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Bơ"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_gift4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_coin4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignStart="@+id/imv_gift"
                android:layout_below="@+id/tv_name_gift"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:background="@drawable/ic_coin" />

            <TextView
                android:id="@+id/tv_coin4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="50"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>