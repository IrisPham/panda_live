<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_rank_of_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="Hạng của tôi"
            android:textColor="#000000"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar_rank_of_me"
        android:id="@+id/card_rank_of_me"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:background="#d2000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imv_rank_of_me"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_dong" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imv_rank_of_me"
                android:textColor="#fff"
                android:id="@+id/tv_rank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đồng"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_below="@+id/tv_rank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#fff"
                        android:id="@+id/tv_exp_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kinh nghiệm hiện tại  " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tv_exp_need"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kinh nghiệm để thăng hạng " />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_note_rank"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/card_rank_of_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạng là gì ?"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Hạng dùng để đánh giá sự tương tác của bạn với mỗi người."
                android:textSize="15sp"
                android:textColor="#000"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Hạng càng cao sẽ khiến người khác chú ý đến bạn."
                android:textSize="15sp"
                android:textColor="#000"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:id="@+id/card_note_exp"
        android:layout_below="@+id/card_note_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Làm sao để thăng hạng ?"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <TextView

                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Khi đủ kinh nghiệm bạn sẽ được thăng hạng."
                android:textSize="15sp"
                android:textColor="#000"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Bạn có thể tăng kinh nghiệm bằng cách live hoặc nhận quà tặng từ người khác."
                android:textSize="15sp"
                android:textColor="#000"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_below="@+id/card_note_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phần thưởng thăng hạng"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Bạn sẽ nhận được biểu tượng đẹp hơn so với hạng trước đó. "
                android:textSize="15sp"
                android:textColor="#000"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Ngoài ra còn nhận được nhiều phần quà có giá trị."
                android:textSize="15sp"
                android:textColor="#000"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
