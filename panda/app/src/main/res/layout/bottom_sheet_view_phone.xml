<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="244dp">

    <TextView android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Sử dụng điện thoại"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>

    <!--SignUp-->
    <Button  android:id="@+id/btn_sign_up"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv_header"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button_sign_up"
        android:text="Đăng kí"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:id="@+id/ln_body"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sign_up"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:background="#999999"/>

        <TextView
            android:id="@+id/tv_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="hoặc"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:background="#999999"/>


    </LinearLayout>

    <!--SignIn-->
    <Button  android:id="@+id/btn_sign_in"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ln_body"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_sign_in"
        android:text="Đăng nhập"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#000000"/>

</RelativeLayout>