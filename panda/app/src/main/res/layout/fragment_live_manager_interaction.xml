<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_radius_top_black"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_avatar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="9dp"
                android:background="@drawable/bg_radius_top_black"
                android:text="Thay đổi avatar"
                android:textColor="#FFFFFF"
                android:textSize="7sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <EditText android:id="@+id/edt_title_live"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Tiêu đề live stream"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_exit" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start_live"
        android:layout_width="206dp"
        android:layout_height="36dp"
        android:layout_above="@+id/layout_group_live"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_background_button"
        android:text="Bắt đầu live" />

    <LinearLayout
        android:id="@+id/layout_group_live"
        android:layout_width="206dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_live_single"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_live_single" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_radius_top_black"
                android:gravity="center"
                android:text="Live đơn"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_live_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_live_group" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_radius_top_black"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Live nhóm"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
